<h1>Auction</h1>

<% if user_signed_in? %>
	<h2>Welcome <%= current_user.name %>!</h2>
	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% else %>
	<%= link_to "Login", create_user_session_path, method: :create %>
<% end %>

<h2>List of Products:</h2>
<ul>
	<% @products_array.each do |the_product| %>
		<li>
			<a href = "/users/<%= the_product.user_id %>/products/<%= the_product.id %>"><%= the_product.title%></a>
		</li>
	<% end %>
</ul>

<a href="/users/<%= @user.id %>/products/new">Add a new product</a>
	<%= f.label :title %>
	<%= f.text_field :title %><br><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br><br>

	<%= f.label :deadline %>
	<%= f.date_field :deadline %><br><br>

	<%= f.button %>
<% end %>
<h1>Add a project</h1>

<% if @my_entry.errors.any? %>
	<ul>
		<% @my_entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @my_project do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br><br>

	<%= f.button %>
<% end %>
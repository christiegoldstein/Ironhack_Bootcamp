<h1>New Time Entry:</h1>

<%= form_for [@my_project, @my_entry] do |f| %>

	<%= f.label :hours %>
	<%= f.text_field :hours %>

	<br>

	<%= f.label :minutes %>
	<%= f.text_field :minutes %>

	<br>

	<%= f.label :comments %>
	<%= f.text_area :comments %>

	<br>

	<%= f.label :date %>
	<%= f.date_field :date %>

	<br>

	<%= f.button "Save" %>

<% end %>
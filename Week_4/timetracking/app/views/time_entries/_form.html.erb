<%= if @my_entry.errors.any? %>
	<% if flash[:error] %>
		<%= flash[:error]%>
	<% end %>

	<ul>
		<% @my_entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
	
<%= form_for [@my_project, @my_entry] do |f| %>

	<%= f.label :hours %>
	<%= f.text_field :hours %>

	<br>

	<%= f.label :minutes %>
	<%= f.text_field :minutes %>

	<br>

	<%= f.label :comments %>
	<%= f.text_area :comments %>

	<br>

	<%= f.label :date %>
	<%= f.date_field :date %>

	<br>

	<%= f.button "Save" %>

<% end %>
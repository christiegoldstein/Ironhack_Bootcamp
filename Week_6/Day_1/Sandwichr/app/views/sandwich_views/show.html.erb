<h1 class="js-sandwich" data=<%= @sandwich.id %>>Sandwich: <%= @sandwich.name %></h1>
<h2>Bread Type: <%= @sandwich.bread_type %></h2>

<h2>Ingredients:</h2>
<ul class="js-ingred-list">
	<% @sandwich.ingredients.each do |ingredient| %>
		<li><%= ingredient.name %></li>
	<% end %>
</ul>


<h3>Add Ingredients</h3>
<ul>
	<% @ingredients.each do |ingredient| %>
		<li><button class="js-ingred" data=<%= ingredient.id %>><%= ingredient.name %></button></li>
	<% end %>
</ul>